<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/horization_layout"
    android:padding="5dp"
    >

    <TextView
        android:id="@+id/tv_seat"
        style="@style/item_key"
        android:layout_weight="0.2"
        android:text="seat"
        />

    <EditText
        android:id="@+id/tv_passengerName"
        style="@style/seating_item_value"
        android:background="@drawable/engineeroom_name_bg"
        android:text=""
        />
    <TextView
        android:id="@+id/tv_Arm"
        style="@style/item_key"
        android:layout_weight="0.2"
        android:background="@null"
        android:text=""
        />
    <EditText
        android:id="@+id/tv_weight"
        style="@style/item_key"
        android:background="@null"
        android:layout_weight="0.2"
        android:inputType="number"
        android:text=""
        />

</LinearLayout>