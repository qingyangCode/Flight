<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/plan_bg_selector"
        >
    <TextView
        android:id="@+id/tv_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/gray_333"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:text="asdfasdfasdf"
        />
        <TextView
            android:id="@+id/tv_text2"
            android:layout_below="@id/tv_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/gray_333"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:text="asdfasdfasdf"
            />
        <TextView
            android:id="@+id/tv_text3"
            android:layout_below="@id/tv_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/gray_333"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="asdfasdfasdf"
            />
        <TextView
            android:id="@+id/tv_text4"
            android:layout_below="@id/tv_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/gray_333"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="asdfasdfasdf"
            />
        <TextView
            android:id="@+id/tv_text5"
            android:layout_below="@id/tv_text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/gray_333"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:text="asdfasdfasdf"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/common_arrow_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>

</LinearLayout>