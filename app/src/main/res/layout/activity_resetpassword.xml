<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_top_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sync_account_tv"
                style="@style/change_pwd_title_font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="28dp"
                android:textAllCaps="true"
                android:text="修改密码" />
            <View style="@style/common_line_1_style" />

            <LinearLayout style="@style/my_account_item_layout">

                <TextView
                    style="@style/my_account_item_key"
                    android:text="用户名" />

                <EditText
                    android:id="@+id/tv_userName"
                    style="@style/my_account_item_value"
                    android:hint="请输入用户名"
                    android:text="" />
            </LinearLayout>
            <View style="@style/common_line_1_style" />

            <LinearLayout style="@style/my_account_item_layout">

                <TextView
                    android:id="@+id/tv_old_pwd_title"
                    style="@style/my_account_item_key"
                    android:text="旧密码" />

                <EditText
                    android:id="@+id/tv_old_pwd"
                    android:inputType="textPassword"
                    style="@style/my_account_item_value"
                    android:hint="请输入旧密码"
                    android:text="" />
            </LinearLayout>

            <View style="@style/common_line_1_style" />

            <LinearLayout style="@style/my_account_item_layout">

                <TextView
                    android:id="@+id/tv_new_pwd_title"
                    style="@style/my_account_item_key"
                    android:text="新密码" />

                <EditText
                    android:id="@+id/tv_new_pwd"
                    android:inputType="textPassword"
                    style="@style/my_account_item_value"
                    android:hint="请输入新密码"
                    android:text="" />
            </LinearLayout>

            <View style="@style/common_line_1_style" />

            <LinearLayout style="@style/my_account_item_layout">

                <TextView
                    android:id="@+id/tv_new_pwd_confirm_title"
                    style="@style/my_account_item_key"
                    android:text="确认密码" />

                <EditText
                    android:id="@+id/tv_new_pwd_confirm"
                    android:inputType="textPassword"
                    style="@style/my_account_item_value"
                    android:hint="请确认您的新密码"
                    android:text="" />
            </LinearLayout>
            l
            <View style="@style/common_line_1_style" />

            <Button
                android:id="@+id/btn_resetPassword"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/common_bg_selector_1"
                android:gravity="center"
                android:text="修改密码"
                android:textColor="@color/white"
                android:textSize="18dp"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>