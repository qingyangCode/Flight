<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="item_key">
        <item name="android:textColor">@color/gray_333</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.4</item>
        <item name="android:textSize">19dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="item_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.6</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/gray_333</item>
        <item name="android:textColorHint">@color/gray_999</item>
    </style>
    <style name="common_text_style_19dp">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19dp</item>
    </style>
    <style name="theme_common_progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@drawable/common_progress_dialog_bg</item>
        <item name="android:backgroundDimAmount">0.2</item>
    </style>
    <style name="common_progressbar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progressbar_layer_list</item>
    </style>

    <style name="common_title_style_30_mt">
        <item name="android:textColor">@color/gray_333</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:layout_marginTop">31dp</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="common_line_1_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/black</item>
    </style>
    <style name="horization_layout">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">17dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="seating_item_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.4</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/gray_333</item>
        <item name="android:textColorHint">@color/gray_999</item>
    </style>
    <style name="new_popup_dialog_positive_single_btn" parent="@style/new_popup_dialog_btn">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/sp_new_pop_up_dialog_positive_single_btn_bg</item>
    </style>
    <style name="new_popup_dialog_btn">
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="new_popup_dialog_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/gray_333</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="new_popup_dialog_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/gray_333</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
</resources>
